{
  "CookieConfigurations": {
    "DefaultScheme": "Cookies",
    "DefaultChallengeScheme": "oidc",
    "Authority": "https://localhost:7025",
    "ClientId": "Client4MVC",
    "ClientSecret": "secret",
    "ReturnType": "code id_token",
    "GetClaimsFromUserInfoEndpoint": "true",
    "SaveTokens": "true",
    "AccessDeniedPath": "/Home/AccessDenied",
    "Claims": [ "api1.read", "api2.read", "offline_access", "CountryAndCity", "Roles", "email" ],
    "ClaimsMapping": [
      {
        "ClaimType": "country",
        "JsonKey": "country"
      },
      {
        "ClaimType": "city",
        "JsonKey": "city"
      },
      {
        "ClaimType": "role",
        "JsonKey": "role"
      }
    ],
    "IsRoleBasedAuthorizationActive": true,
    "RoleClaimType": "role",
    "LoginPath": "/Login/Index",
    "LogoutPath": "/Home/Index"
  },
  "AuthenticationServer": {
    "BaseUrl": "https://localhost:7025"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
